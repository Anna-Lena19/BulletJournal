<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/task_row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/task_row_background"
    android:orientation="horizontal"
    android:paddingTop="33dp"
    android:paddingBottom="33dp">

    <ImageButton
        android:id="@+id/task_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@color/colorDarkGrey"
        android:src="@drawable/ic_task" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/task_background"
        android:minWidth="450dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false">

            <TableRow android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/task_Description_Display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="10dp"
                    android:maxWidth="120dp"
                    android:minWidth="120dp"
                    android:text="This is my fist to do is my fist to do This is my fist to do"
                    android:textColor="@color/colorToDoHeadingFont"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/task_time_output"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_marginBottom="10dp"
                    android:text=""
                    android:textColor="@color/colorToDoHeadingFont"
                    android:textSize="15dp" />
            </TableRow>

            <TableRow
                android:layout_marginRight="3dp">

                <TextView
                    android:id="@+id/task_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginRight="35dp"
                    android:paddingLeft="10dp"
                    android:maxWidth="100dp"
                    android:minWidth="100dp"
                    android:text="Deadline: "
                    android:textColor="@color/colorToDoHeadingFont"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/task_private_uni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_column="2"
                    android:text="Projekt"
                    android:textColor="@color/colorToDoHeadingFont"
                    android:textSize="12dp" />


            </TableRow>

        </TableLayout>


    </RelativeLayout>


</LinearLayout>





